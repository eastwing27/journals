<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Journals.App.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="15,0,15,0">
            <Label Text="Имя пользователя" />
            <Entry x:Name="LoginEntry" Placeholder="Введите логин" />
            <Label Text="Пароль" />
            <Entry x:Name ="PasswordEntry" Placeholder="Введите пароль" IsPassword="True"/>
            <Button x:Name="btnLogin" Text="Вход" Clicked="OnClick" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>